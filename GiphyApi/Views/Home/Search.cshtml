
@{
    ViewData["Title"] = "Search";
}
@model SearchViewModel;
<h1>Search results by title : @Model.Title</h1>
<small>Total count :  @Model.TotalCount </small>
<div class="row">
    @foreach (var item in Model.data)
    {
        <div class="col-md-4">
            <partial name="_MovieCardPartial" model="item" />
        </div>
    }
</div>
<br/>
<nav aria-label="Page navigation example" class="d-flex align-content-center justify-content-sm-center">
    <ul class="pagination">

        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Search"
                   asp-controller="Home"
                   asp-route-giphyTitle="@Model.Title"
                   asp-route-page="@(Model.CurrentPage-1)">Previous</a>
            </li>
        }

        @for (var i = Model.CurrentPage - 6; i <= Model.CurrentPage + 6; i++)
        {

            @if (i > 0 && i < Model.TotalPages)
            {
                @if (Model.CurrentPage == i)
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-action="Search"
                           asp-controller="Home"
                           asp-route-giphyTitle="@Model.Title"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {

                    <li class="page-item">
                        <a class="page-link"
                           asp-action="Search"
                           asp-controller="Home"
                           asp-route-giphyTitle="@Model.Title"
                           asp-route-page="@i">@i</a>
                    </li>
                }
            }

        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Search"
                   asp-controller="Home"
                   asp-route-giphyTitle="@Model.Title"
                   asp-route-page="@(Model.CurrentPage+1)">Next</a>
            </li>
        }


    </ul>
</nav>

