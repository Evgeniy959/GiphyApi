
@{
    ViewData["Title"] = "Search";
}
@model SearchViewModel;
<h1>Search results by title : @Model.Title</h1>
<small>Total results :  @Model.TotalResults </small>
<div class="row">
    @foreach (var item in Model.data)
    {
        <div class="col-3 card">
            <iframe src="@item.embed_url" class="card-img-top" alt="..."></iframe>
            <div class="card-body">
                <h5 class="card-title">@item.title</h5>
                <p class="card-text">@item.type.</p>
                <a asp-controller="Home" asp-action="UserInfo" asp-route-giphyTitle="@item.Title" asp-route-user="@item.user" class="btn btn-primary">Show User</a>
            </div>
        </div>
    }
</div>
<br/>
<nav aria-label="Page navigation example" class="d-flex align-content-center justify-content-sm-center">
    <ul class="pagination">

        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Search"
                   asp-controller="Home"
                   asp-route-giphyTitle="@Model.Title"
                   asp-route-page="@(Model.CurrentPage-1)">Previous</a>
            </li>
        }

        @for (var i = Model.CurrentPage - 4; i <= Model.CurrentPage + 4; i++)
        {

            @if (i > 0 && i < Model.TotalPages)
            {
                @if (Model.CurrentPage == i)
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-action="Search"
                           asp-controller="Home"
                           asp-route-giphyTitle="@Model.Title"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {

                    <li class="page-item">
                        <a class="page-link"
                           asp-action="Search"
                           asp-controller="Home"
                           asp-route-giphyTitle="@Model.Title"
                           asp-route-page="@i">@i</a>
                    </li>
                }
            }

        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Search"
                   asp-controller="Home"
                   asp-route-giphyTitle="@Model.Title"
                   asp-route-page="@(Model.CurrentPage+1)">Next</a>
            </li>
        }


    </ul>
</nav>

